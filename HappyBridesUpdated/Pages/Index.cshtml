@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="css/index.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 IDinput">
            <label for="userID" class="IDinput">Username</label>
            <input type="text" class="form-control" id="userID">
        </div>
        <div class="col-4"></div>
    </div>
    <div class="row">
            <div class="col-4"></div>
            <div class="col-4 passWD">
                <label for="passWD" class="passWD">Password</label>
                <input type="password" class="form-control" id="passWD">
            </div>
            <div class="col-4"></div>
        </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-2 loginButton">    
            <a href="/list" class="btn btn-info btn-lg" role="button">Login here</a>
        </div>
        <div class="col-2 registerLink">    
                    <a href="/register" class="btn btn-info btn-lg" role="button">Register here</a>
                </div>
        <div class="col-4"></div>
    </div>
</div>