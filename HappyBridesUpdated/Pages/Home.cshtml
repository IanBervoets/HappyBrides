@page
@model HappyBridesUpdated.Pages.Home

<link rel="stylesheet" href="css/Home.css">

<div class="container-fluid ownContainer">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-2 ownWeddingHeader" style="font-size: 2rem">
            Your Weddings
        </div>
        <div class="col-10"></div>
    </div>
    <div class="row ownWedding">
        <div class="col-2"></div>
        <div class="col-4">
            @if (Model.IsBride)
            {
                <form method="post">
                <button class="btn btn-info btn-lg" asp-page-handler="GoToList" type="submit">Modify Gifts</button>
                </form>
            }
            else
            {
                <form method="post">
                    <button class="btn btn-info btn-lg" asp-page-handler="StartList" type="submit">Create gift list</button>
                </form>
            }
        </div>
        <div class="col-8"></div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-2 ownWeddingHeader" style="font-size: 2rem">
            Others Weddings
        </div>
        <div class="col-10"></div>
    </div>
    <div class="row ownWedding">
        <div class="col-2"></div>
        <div class="col-4">
            No current wedding
        </div>
        <div class="col-8"></div>
    </div>
</div>
